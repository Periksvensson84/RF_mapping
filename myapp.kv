<MyWidget>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Vit bakgrund
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Välkommen till min Kivy-app!"
        font_size: 24
        color: 0, 0, 1, 1  # Blå text

    Button:
        text: "Klicka mig"
        on_press: app.on_button_click()
        background_color: 1, 1, 1, 1  # Vit bakgrund för knapp
        color: 0, 0, 1, 1  # Blå text på knapp

    Button:
        text: "Stäng"
        on_press: app.stop()
        background_color: 1, 1, 1, 1  # Vit bakgrund för knapp
        color: 0, 0, 1, 1  # Blå text på knapp
