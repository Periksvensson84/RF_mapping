<MyScreenManager>:
    MainPage:

<MainPage>:
    name: 'main_page'
    BoxLayout:
        orientation: 'vertical'
        
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: '[b]RF Mapping Applikation[/b]'
            markup: True
            font_size: '36sp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: None
            height: self.texture_size[1]
            color: 0.5, 0.678, 0.678, 1

        Widget:
            size_hint_y: None
            height: 50

        TextInput:
            id: user_video_path
            hint_text: "Enter your video path"
            font_size: 18
            size_hint_y: None
            height: 40
            width: 600
            size_hint_x: None
            pos_hint: {'center_x': 0.5}

        Button:
            text: "Open File Chooser"
            size_hint_y: None
            height: 40
            width: 200
            size_hint_x: None
            pos_hint: {'center_x': 0.5}
            on_release: root.open_filechooser()

        Widget:
            size_hint_y: None
            height: 350
        
        Button:
            text: "Exit"
            font_size: 18
            size_hint_y: None
            height: 40
            width: 200
            size_hint_x: None
            background_color: 0.6, 0.8, 1, 1
            pos_hint: {'center_x': 0.5}
            on_press: app.exit_app()
