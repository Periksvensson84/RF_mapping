<MyScreenManager>:
    MainPage:

<MainPage>:
    name: 'main_page'
    BoxLayout:
        orientation: 'vertical'
        
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Button:
            text: "Exit"
            font_size: 18
            size_hint_y: None
            height: 40
            width: 200
            size_hint_x: None
            background_color: 0.6, 0.8, 1, 1
            pos_hint: {'center_x': 0.5}
            on_press: app.exit_app()

        

